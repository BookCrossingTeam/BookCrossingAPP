<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="8">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edit_posing_wanting_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:hint="name"/>


            <EditText
                android:id="@+id/edit_posing_wanting_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="author"/>


            <EditText
                android:id="@+id/edit_posing_wanting_press"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="press"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_posing_wanting_pic"
            android:layout_width="142dp"
            android:layout_height="220dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/add_sharebook"/>

    </LinearLayout>



    <ImageView
        android:id="@+id/btn_posing_wanting"
        android:layout_weight="2"
        android:layout_width="152dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/pose_button_pose"
        />





</LinearLayout>


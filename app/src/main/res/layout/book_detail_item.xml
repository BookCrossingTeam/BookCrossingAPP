<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Android="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="134dp">

    <RelativeLayout
        android:id="@+id/book_box"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:background="@drawable/white_box">

        <ImageView
            android:id="@+id/book_detail_pic"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp" />

        <TextView
            android:id="@+id/book_detail_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/book_detail_bookname"
            android:layout_marginBottom="26dp"
            android:textSize="12sp"
            Android:text="Francis Scott Key Fitzgerald" />

        <TextView
            android:id="@+id/book_detail_bookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textStyle="bold"
            android:maxWidth="150dp"
            android:textSize="14sp"
            android:textColor="#000"
            Android:text="The Great Gatsby"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="73dp" />

        <TextView
            android:id="@+id/book_detail_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/book_detail_icon"
            android:layout_toEndOf="@+id/book_detail_icon"
            android:layout_toRightOf="@+id/book_detail_icon"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Yvettemuki"
            android:textColor="#000"
            android:textSize="12sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/book_detail_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="5dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/book_detail_posetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="132dp"
            android:textSize="10sp"
            android:visibility="visible"
            Android:text="4-13 15:00:00" />


    </RelativeLayout>

</LinearLayout>
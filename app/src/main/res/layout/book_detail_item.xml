<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Android="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="134dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:background="@drawable/white_box">

        <RelativeLayout
            android:layout_width="268dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/book_detail_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/user_image" />

            <TextView
                android:id="@+id/book_detail_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/book_detail_icon"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="17dp"
                android:layout_toEndOf="@+id/book_detail_icon"
                android:layout_toRightOf="@+id/book_detail_icon"
                android:text="Yvettemuki"
                android:textSize="14sp" />

            <TextView
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/book_detail_username"
                android:layout_alignTop="@+id/book_detail_username"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/book_detail_username"
                android:background="@drawable/main_content_level_back"
                android:paddingLeft="6dp"
                android:text="21"
                android:textColor="#ffffff"

                android:textSize="12sp" />

            <TextView
                android:id="@+id/book_detail_bookname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="64dp"
                android:layout_toEndOf="@+id/book_detail_icon"
                android:layout_toRightOf="@+id/book_detail_icon"
                android:gravity="center_horizontal"
                android:text="The Great Gatsby"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/book_detail_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_detail_bookname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Francis Scott Key Fitzgerald"
                android:textSize="14sp" />


        </RelativeLayout>


        <ImageView
            android:id="@+id/book_detail_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/book_image" />


    </RelativeLayout>

</LinearLayout>
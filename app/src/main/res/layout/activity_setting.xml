<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.bookcrossingapp.activity.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/title_friend">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SETTINGS"
                android:textColor="#000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_setting_account"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:background="@drawable/friend_list_item_bg"
                android:text="账号设置"
                android:textColor="@color/contents_text"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_setting_feedback"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:background="@drawable/friend_list_item_bg"
                android:text="反馈建议"
                android:textColor="@color/contents_text"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_setting_software"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:background="@drawable/friend_list_item_bg"
                android:text="软件设置"
                android:textColor="@color/contents_text"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_setting_help"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:background="@drawable/friend_list_item_bg"
                android:text="帮助"
                android:textColor="@color/contents_text"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_setting_update"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/friend_list_item_bg"
                android:gravity="center"
                android:text="软件更新"
                android:textColor="@color/contents_text"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_log_off"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:background="@drawable/friend_list_item_bg"
                android:text="退出登录"
                android:textColor="@color/contents_text"
                android:textSize="18sp" />


        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="22.5dp"
    android:paddingRight="22.5dp"
    android:paddingTop="20dp">

    <Button
        android:id="@+id/btn_scanning"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/friend_list_item_bg"
        android:gravity="center"
        android:text="扫码上传"
        android:textColor="#333333"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_share_book"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/friend_list_item_bg"
        android:gravity="center"
        android:text="手动添加已有图书"
        android:textColor="#333333"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_want_book"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/friend_list_item_bg"
        android:gravity="center"
        android:text="手动添加想要图书"
        android:textColor="#333333"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/friend_list_item_bg"
        android:gravity="center"
        android:text="取消"
        android:textColor="#333333"
        android:textSize="18sp" />
</LinearLayout>
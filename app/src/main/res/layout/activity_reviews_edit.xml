<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.administrator.bookcrossingapp.activity.ReviewsEditActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="8"
       android:orientation="vertical"

       android:id="@+id/layout_frame">
     <EditText
         android:id="@+id/reviews_edit_title"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:hint="title"
         android:layout_marginRight="15dp"
         android:layout_marginLeft="15dp"
         android:paddingLeft="10dp"
         android:textSize="18dp"
         android:layout_marginTop="30dp"
         android:gravity="center"/>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
         android:gravity="center"
         android:textSize="16dp"
         android:text="cover photo"/>

     <ImageView
         android:id="@+id/reviews_edit_cover"
         android:layout_width="match_parent"
         android:layout_marginTop="4dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:layout_height="120dp"
         android:src="@drawable/add_cover"/>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="18dp"
         android:gravity="center"
         android:text="content"/>

     <EditText
         android:id="@+id/reviews_edit_content"
         android:layout_marginTop="15dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
         android:inputType="textMultiLine"
         android:maxLines="5"
         />

   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:layout_marginTop="20dp"
       android:orientation="vertical"
       >
    <Button
        android:id="@+id/reviews_edit_write"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_review_pose"
        />

   </LinearLayout>

    





</LinearLayout>

